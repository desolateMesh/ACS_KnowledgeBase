{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmssName": {
      "type": "string",
      "metadata": {
        "description": "The name of the Virtual Machine Scale Set to apply autoscale settings to"
      }
    },
    "minCapacity": {
      "type": "int",
      "defaultValue": 2,
      "metadata": {
        "description": "The minimum capacity (number of instances) for the VMSS"
      }
    },
    "maxCapacity": {
      "type": "int",
      "defaultValue": 10,
      "metadata": {
        "description": "The maximum capacity (number of instances) for the VMSS"
      }
    },
    "defaultCapacity": {
      "type": "int",
      "defaultValue": 3,
      "metadata": {
        "description": "The default capacity (number of instances) for the VMSS"
      }
    },
    "autoscaleSettingName": {
      "type": "string",
      "defaultValue": "[concat(parameters('vmssName'), '-autoscale')]",
      "metadata": {
        "description": "The name of the autoscale setting"
      }
    },
    "cpuThresholdToScaleOut": {
      "type": "int",
      "defaultValue": 70,
      "metadata": {
        "description": "The CPU threshold to scale out (percentage)"
      }
    },
    "cpuThresholdToScaleIn": {
      "type": "int",
      "defaultValue": 30,
      "metadata": {
        "description": "The CPU threshold to scale in (percentage)"
      }
    },
    "scaleOutCooldown": {
      "type": "string",
      "defaultValue": "PT5M",
      "metadata": {
        "description": "The cool down period (ISO 8601 duration) before another scale out can occur"
      }
    },
    "scaleInCooldown": {
      "type": "string",
      "defaultValue": "PT5M",
      "metadata": {
        "description": "The cool down period (ISO 8601 duration) before another scale in can occur"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Insights/autoscalesettings",
      "apiVersion": "2022-10-01",
      "name": "[parameters('autoscaleSettingName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "name": "[parameters('autoscaleSettingName')]",
        "enabled": true,
        "targetResourceUri": "[resourceId('Microsoft.Compute/virtualMachineScaleSets', parameters('vmssName'))]",
        "profiles": [
          {
            "name": "Default Profile",
            "capacity": {
              "minimum": "[parameters('minCapacity')]",
              "maximum": "[parameters('maxCapacity')]",
              "default": "[parameters('defaultCapacity')]"
            },
            "rules": [
              {
                "metricTrigger": {
                  "metricName": "Percentage CPU",
                  "metricNamespace": "microsoft.compute/virtualmachinescalesets",
                  "metricResourceUri": "[resourceId('Microsoft.Compute/virtualMachineScaleSets', parameters('vmssName'))]",
                  "timeGrain": "PT1M",
                  "statistic": "Average",
                  "timeWindow": "PT5M",
                  "timeAggregation": "Average",
                  "operator": "GreaterThan",
                  "threshold": "[parameters('cpuThresholdToScaleOut')]"
                },
                "scaleAction": {
                  "direction": "Increase",
                  "type": "ChangeCount",
                  "value": "1",
                  "cooldown": "[parameters('scaleOutCooldown')]"
                }
              },
              {
                "metricTrigger": {
                  "metricName": "Percentage CPU",
                  "metricNamespace": "microsoft.compute/virtualmachinescalesets",
                  "metricResourceUri": "[resourceId('Microsoft.Compute/virtualMachineScaleSets', parameters('vmssName'))]",
                  "timeGrain": "PT1M",
                  "statistic": "Average",
                  "timeWindow": "PT5M",
                  "timeAggregation": "Average",
                  "operator": "LessThan",
                  "threshold": "[parameters('cpuThresholdToScaleIn')]"
                },
                "scaleAction": {
                  "direction": "Decrease",
                  "type": "ChangeCount",
                  "value": "1",
                  "cooldown": "[parameters('scaleInCooldown')]"
                }
              }
            ]
          },
          {
            "name": "Business Hours Profile",
            "capacity": {
              "minimum": "[mul(parameters('minCapacity'), 2)]",
              "maximum": "[parameters('maxCapacity')]",
              "default": "[mul(parameters('defaultCapacity'), 2)]"
            },
            "rules": [
              {
                "metricTrigger": {
                  "metricName": "Percentage CPU",
                  "metricNamespace": "microsoft.compute/virtualmachinescalesets",
                  "metricResourceUri": "[resourceId('Microsoft.Compute/virtualMachineScaleSets', parameters('vmssName'))]",
                  "timeGrain": "PT1M",
                  "statistic": "Average",
                  "timeWindow": "PT5M",
                  "timeAggregation": "Average",
                  "operator": "GreaterThan",
                  "threshold": "[parameters('cpuThresholdToScaleOut')]"
                },
                "scaleAction": {
                  "direction": "Increase",
                  "type": "ChangeCount",
                  "value": "2",
                  "cooldown": "[parameters('scaleOutCooldown')]"
                }
              },
              {
                "metricTrigger": {
                  "metricName": "Percentage CPU",
                  "metricNamespace": "microsoft.compute/virtualmachinescalesets",
                  "metricResourceUri": "[resourceId('Microsoft.Compute/virtualMachineScaleSets', parameters('vmssName'))]",
                  "timeGrain": "PT1M",
                  "statistic": "Average",
                  "timeWindow": "PT5M",
                  "timeAggregation": "Average",
                  "operator": "LessThan",
                  "threshold": "[parameters('cpuThresholdToScaleIn')]"
                },
                "scaleAction": {
                  "direction": "Decrease",
                  "type": "ChangeCount",
                  "value": "1",
                  "cooldown": "[parameters('scaleInCooldown')]"
                }
              }
            ],
            "recurrence": {
              "frequency": "Week",
              "schedule": {
                "timeZone": "UTC",
                "days": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
                "hours": [8],
                "minutes": [0]
              }
            }
          },
          {
            "name": "After-Hours Profile",
            "capacity": {
              "minimum": "[parameters('minCapacity')]",
              "maximum": "[parameters('maxCapacity')]",
              "default": "[parameters('minCapacity')]"
            },
            "rules": [
              {
                "metricTrigger": {
                  "metricName": "Percentage CPU",
                  "metricNamespace": "microsoft.compute/virtualmachinescalesets",
                  "metricResourceUri": "[resourceId('Microsoft.Compute/virtualMachineScaleSets', parameters('vmssName'))]",
                  "timeGrain": "PT1M",
                  "statistic": "Average",
                  "timeWindow": "PT5M",
                  "timeAggregation": "Average",
                  "operator": "GreaterThan",
                  "threshold": "[parameters('cpuThresholdToScaleOut')]"
                },
                "scaleAction": {
                  "direction": "Increase",
                  "type": "ChangeCount",
                  "value": "1",
                  "cooldown": "[parameters('scaleOutCooldown')]"
                }
              },
              {
                "metricTrigger": {
                  "metricName": "Percentage CPU",
                  "metricNamespace": "microsoft.compute/virtualmachinescalesets",
                  "metricResourceUri": "[resourceId('Microsoft.Compute/virtualMachineScaleSets', parameters('vmssName'))]",
                  "timeGrain": "PT1M",
                  "statistic": "Average",
                  "timeWindow": "PT5M",
                  "timeAggregation": "Average",
                  "operator": "LessThan",
                  "threshold": "[parameters('cpuThresholdToScaleIn')]"
                },
                "scaleAction": {
                  "direction": "Decrease",
                  "type": "ChangeCount",
                  "value": "1",
                  "cooldown": "[parameters('scaleInCooldown')]"
                }
              }
            ],
            "recurrence": {
              "frequency": "Week",
              "schedule": {
                "timeZone": "UTC",
                "days": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
                "hours": [18],
                "minutes": [0]
              }
            }
          }
        ],
        "notifications": [
          {
            "operation": "Scale",
            "email": {
              "sendToSubscriptionAdministrator": true,
              "sendToSubscriptionCoAdministrators": true,
              "customEmails": []
            },
            "webhooks": []
          }
        ],
        "predictiveAutoscalePolicy": {
          "scaleMode": "Enabled",
          "scaleLookAheadTime": "PT14M"
        }
      }
    }
  ],
  "outputs": {
    "autoscaleSettingResourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Insights/autoscalesettings', parameters('autoscaleSettingName'))]"
    }
  }
}